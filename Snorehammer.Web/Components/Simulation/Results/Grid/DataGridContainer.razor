@using Snorehammer.Web.FrontendModels.Stats
<RadzenCard>
    <DataGrid stats="@DataFromComparison()" />
</RadzenCard>

@code {
    [Parameter]
    public Snorehammer.Web.FrontendModels.Comparison comparison { get; set; }
    private List<MultiFightStats> DataFromComparison()
    {
        var res = new List<MultiFightStats>();
        res.Add(comparison.Simulation1.Stats);
        if (comparison.MeleeFightBack)
        {
            res.Add(comparison.Simulation1.FightBackStats);
        }
        if (comparison.ComparingAttackers)
        {
            res.Add(comparison.AlternateAttackSimulation.Stats);
            if (comparison.MeleeFightBack)
            {
                res.Add(comparison.AlternateAttackSimulation.FightBackStats);
            }
        }
        else if (comparison.ComparingDefenders)
        {
            res.Add(comparison.AlternateDefenseSimulation.Stats);
            if (comparison.MeleeFightBack)
            {
                res.Add(comparison.AlternateDefenseSimulation.FightBackStats);
            }
        }
        return res;
    }
}
