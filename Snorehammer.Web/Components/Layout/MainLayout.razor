@inherits LayoutComponentBase
@rendermode InteractiveServer
<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenImage Path="img/snorehammer.jpg" Style="height: 35px; margin:10px;" AlternateText="Logo" />
            <RadzenLabel Text="Snorehammer" />
            <RadzenAppearanceToggle />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="UnitCompare" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Simple Comparison" Icon="cycle" Path="/simple"/>
            <RadzenPanelMenuItem Text="About and copyright" Icon="feedback" Path="/about"/>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        
            @Body
    </RadzenBody>        
</RadzenLayout>
<RadzenComponents @rendermode="InteractiveServer" />

@code {
    bool sidebar1Expanded = true;
}